<%- include('../partials/header', {title: 'Manage Inventory', user: user}) %>

<main>
    <div class="container">
        <div class="dashboard">
            <aside class="sidebar">
                <h3>Admin Menu</h3>
                <ul>
                    <li><a href="/admin/dashboard">Dashboard</a></li>
                    <li><a href="/admin/manage-inventory">Manage Inventory</a></li>
                </ul>
            </aside>
            
            <div class="main-content">
                <h2>Blood Inventory Management</h2>
                
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert error"><%= error %></div>
                <% } %>
                
                <% if (typeof success !== 'undefined' && success) { %>
                    <div class="alert success"><%= success %></div>
                <% } %>
                
                <div class="stats">
                    <div class="stat-card">
                        <h3>A+</h3>
                        <p>Available Units: 25</p>
                    </div>
                    <div class="stat-card">
                        <h3>A-</h3>
                        <p>Available Units: 15</p>
                    </div>
                    <div class="stat-card">
                        <h3>B+</h3>
                        <p>Available Units: 20</p>
                    </div>
                    <div class="stat-card">
                        <h3>B-</h3>
                        <p>Available Units: 8</p>
                    </div>
                    <div class="stat-card">
                        <h3>AB+</h3>
                        <p>Available Units: 12</p>
                    </div>
                    <div class="stat-card">
                        <h3>AB-</h3>
                        <p>Available Units: 5</p>
                    </div>
                    <div class="stat-card">
                        <h3>O+</h3>
                        <p>Available Units: 30</p>
                    </div>
                    <div class="stat-card">
                        <h3>O-</h3>
                        <p>Available Units: 10</p>
                    </div>
                </div>
                
                <h3>Update Blood Stock</h3>
                <form action="/admin/update-inventory" method="POST" style="background: #f8f9fa; padding: 1rem; border-radius: 5px; margin-bottom: 2rem;">
                    <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 1rem; align-items: end;">
                        <div class="form-group" style="margin-bottom: 0;">
                            <label for="bloodGroup">Blood Group:</label>
                            <select id="bloodGroup" name="bloodGroup" required>
                                <option value="A+">A+</option>
                                <option value="A-">A-</option>
                                <option value="B+">B+</option>
                                <option value="B-">B-</option>
                                <option value="AB+">AB+</option>
                                <option value="AB-">AB-</option>
                                <option value="O+">O+</option>
                                <option value="O-">O-</option>
                            </select>
                        </div>
                        <div class="form-group" style="margin-bottom: 0;">
                            <label for="units">Units to Add/Remove:</label>
                            <input type="number" id="units" name="units" placeholder="Use negative for removal" required>
                        </div>
                        <button type="submit" class="btn">Update Stock</button>
                    </div>
                </form>
                
                <h3>Recent Inventory Changes</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Blood Group</th>
                            <th>Change</th>
                            <th>Type</th>
                            <th>Current Stock</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>2025-01-15</td>
                            <td>O+</td>
                            <td>+5</td>
                            <td>Donation</td>
                            <td>30</td>
                        </tr>
                        <tr>
                            <td>2025-01-15</td>
                            <td>A+</td>
                            <td>-2</td>
                            <td>Request Fulfilled</td>
                            <td>25</td>
                        </tr>
                        <tr>
                            <td>2025-01-14</td>
                            <td>B-</td>
                            <td>+3</td>
                            <td>Donation</td>
                            <td>8</td>
                        </tr>
                    </tbody>
                </table>
                
                <h3>Low Stock Alerts</h3>
                <div class="alert error" style="margin-top: 1rem;">
                    <p><strong>Warning:</strong> The following blood groups are running low:</p>
                    <ul>
                        <li>AB- (5 units remaining)</li>
                        <li>B- (8 units remaining)</li>
                        <li>O- (10 units remaining)</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>
