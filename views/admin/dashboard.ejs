<%- include('../partials/header', {title: 'Admin Dashboard', user: user}) %>

<main>
    <div class="container">
        <div class="dashboard">
            <aside class="sidebar">
                <h3>Admin Menu</h3>
                <ul>
                    <li><a href="/admin/dashboard">Dashboard</a></li>
                    <li><a href="/admin/manage-inventory">Manage Inventory</a></li>
                </ul>
            </aside>
            
            <div class="main-content">
                <h2>Admin Dashboard</h2>
                
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert error"><%= error %></div>
                <% } %>
                
                <% if (typeof success !== 'undefined' && success) { %>
                    <div class="alert success"><%= success %></div>
                <% } %>
                
                <% if (typeof stats !== 'undefined') { %>
                    <div class="stats">
                        <div class="stat-card">
                            <h3><%= stats.donors %></h3>
                            <p>Total Donors</p>
                            <div class="blood-group-breakdown">
                                <% for (const [bloodGroup, count] of Object.entries(stats.donorsByBloodGroup)) { %>
                                    <small><%= bloodGroup %>: <%= count %></small>
                                <% } %>
                            </div>
                        </div>
                        <div class="stat-card">
                            <h3><%= stats.recipients %></h3>
                            <p>Total Recipients</p>
                            <div class="blood-group-breakdown">
                                <% for (const [bloodGroup, count] of Object.entries(stats.recipientsByBloodGroup)) { %>
                                    <small><%= bloodGroup %>: <%= count %></small>
                                <% } %>
                            </div>
                        </div>
                        <div class="stat-card">
                            <h3><%= stats.pendingDonations %></h3>
                            <p>Pending Donations</p>
                        </div>
                        <div class="stat-card">
                            <h3><%= stats.pendingRequests %></h3>
                            <p>Pending Requests</p>
                        </div>
                    </div>
                <% } %>
                
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem;">
                    <div>
                        <h3>Pending Donations</h3>
                        <% if (typeof donations !== 'undefined' && donations.length > 0) { %>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Donor</th>
                                        <th>Blood Group</th>
                                        <th>Units</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% donations.forEach(donation => { %>
                                        <tr>
                                            <td><%= donation.donor.name %></td>
                                            <td><%= donation.bloodGroup %></td>
                                            <td><%= donation.units %></td>
                                            <td>
                                                <form action="/admin/approve-donation/<%= donation._id %>" method="POST" style="display: inline;">
                                                    <button type="submit" class="btn" style="padding: 0.3rem 0.6rem; font-size: 0.8rem;">Approve</button>
                                                </form>
                                                <form action="/admin/reject-donation/<%= donation._id %>" method="POST" style="display: inline;">
                                                    <button type="submit" class="btn btn-secondary" style="padding: 0.3rem 0.6rem; font-size: 0.8rem;">Reject</button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        <% } else { %>
                            <p>No pending donations</p>
                        <% } %>
                    </div>
                    
                    <div>
                        <h3>Pending Requests</h3>
                        <% if (typeof requests !== 'undefined' && requests.length > 0) { %>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Recipient</th>
                                        <th>Blood Group</th>
                                        <th>Units</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% requests.forEach(request => { %>
                                        <tr>
                                            <td><%= request.recipient.name %></td>
                                            <td><%= request.bloodGroup %></td>
                                            <td><%= request.units %></td>
                                            <td>
                                                <form action="/admin/approve-request/<%= request._id %>" method="POST" style="display: inline;">
                                                    <button type="submit" class="btn" style="padding: 0.3rem 0.6rem; font-size: 0.8rem;">Approve</button>
                                                </form>
                                                <form action="/admin/reject-request/<%= request._id %>" method="POST" style="display: inline;">
                                                    <button type="submit" class="btn btn-secondary" style="padding: 0.3rem 0.6rem; font-size: 0.8rem;">Reject</button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        <% } else { %>
                            <p>No pending requests</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>
