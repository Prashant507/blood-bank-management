<%- include('../partials/header', {title: 'Schedule Donation', user: user}) %>

<main>
    <div class="container">
        <div class="form-container">
            <h2>Schedule Blood Donation</h2>
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert error"><%= error %></div>
            <% } %>
            
            <form action="/donor/donate" method="POST">
                <div class="form-group">
                    <label for="bloodGroup">Blood Group:</label>
                    <input type="text" id="bloodGroup" value="<%= user.bloodGroup %>" readonly>
                </div>
                <div class="form-group">
                    <label for="units">Units to Donate:</label>
                    <select id="units" name="units" required>
                        <option value="1">1 Unit</option>
                        <option value="2">2 Units</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="location">Preferred Location:</label>
                    <input type="text" id="location" name="location" placeholder="Enter location">
                </div>
                <button type="submit" class="btn">Schedule Donation</button>
                <a href="/donor/dashboard" class="btn btn-secondary" style="margin-left: 1rem;">Cancel</a>
            </form>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>
