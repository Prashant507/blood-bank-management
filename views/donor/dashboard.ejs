<%- include('../partials/header', {title: 'Donor Dashboard', user: user}) %>

<main>
    <div class="container">
        <div class="dashboard">
            <aside class="sidebar">
                <h3>Donor Menu</h3>
                <ul>
                    <li><a href="/donor/dashboard">Dashboard</a></li>
                    <li><a href="/donor/donation-form">Schedule Donation</a></li>
                </ul>
                
                <div style="margin-top: 2rem;">
                    <h4>Profile Info</h4>
                    <p><strong>Name:</strong> <%= user.name %></p>
                    <p><strong>Blood Group:</strong> <%= user.bloodGroup %></p>
                    <p><strong>Eligible:</strong> <%= user.eligibleToDonate ? 'Yes' : 'No' %></p>
                </div>
            </aside>
            
            <div class="main-content">
                <h2>Welcome, <%= user.name %></h2>
                
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert error"><%= error %></div>
                <% } %>
                
                <div class="stats">
                    <div class="stat-card">
                        <h3><%= donations.length %></h3>
                        <p>Total Donations</p>
                    </div>
                    <div class="stat-card">
                        <h3><%= donations.filter(d => d.status === 'pending').length %></h3>
                        <p>Pending</p>
                    </div>
                    <div class="stat-card">
                        <h3><%= donations.filter(d => d.status === 'approved').length %></h3>
                        <p>Approved</p>
                    </div>
                </div>
                
                <h3>My Donations</h3>
                <% if (donations.length > 0) { %>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Blood Group</th>
                                <th>Units</th>
                                <th>Location</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% donations.forEach(donation => { %>
                                <tr>
                                    <td><%= new Date(donation.donationDate).toLocaleDateString() %></td>
                                    <td><%= donation.bloodGroup %></td>
                                    <td><%= donation.units %></td>
                                    <td><%= donation.location || 'Not specified' %></td>
                                    <td><span class="status <%= donation.status %>"><%= donation.status %></span></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <p>No donations recorded yet. <a href="/donor/donation-form">Schedule your first donation</a></p>
                <% } %>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>
